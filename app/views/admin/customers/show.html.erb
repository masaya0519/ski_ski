<div class="container">

  <div class="row">
    <div class="col-3 mb-5">
      <h5 class="text-center bg-light mt-5"><%= @member.name %>さんの会員詳細</h5>
   </div>
 </div>

  <div class="row">
    <div class="col-8 mb-2">
      <table class="table">

        <tr>
          <th>会員ID</th>
        <th><%= @member.id %></th>
        </tr>
        <tr>
          <th>氏名</th>
          <th><%= @member.name %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th><%= @member.email %></th>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <th>
            <%if @member.is_deleted == false %>
             <p class="text-success">有効</p>
            <% else %>
             <p class="text-secondary">退会済</p>
            <% end %>
          </th>
        </tr>
      </table>
    </div>
  </div>
</div>