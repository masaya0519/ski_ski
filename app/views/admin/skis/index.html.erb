<div class="container">
  <div class="row mt-3">

　　<h4 class="col-md-3 bg-light text-center m-4">スキー場一覧</h4>
　　<div class="col-md-3 m-4"></div>
　　<div class="col-md-3 m-4">
      <%= link_to new_admin_ski_path, class:"btn btn-outline-secondary" do %>
        <i class="fas fa-plus fa-1x"></i>
      <% end %>
    </div>
　</div>
  <div class="row mx-3">

    <% @skis.each do |ski| %>
    <div class="row"><%= link_to ski.ski_name, admin_ski_path(ski.id) %></div>
    <div class="row">
      <div class="col-7">
        <%= ski.explanation %>
      </div>
      <div class="col-5">
        <div class="row">
          <div class="col-4">標高</div>
          <div class="col-3"><%= ski.elevation %>m</div>
        </div>
        <div class="row">
          <div class="col-4">滑走距離</div>
          <div class="col-3"><%= ski.running_distance %>m</div>
        </div>
        <div class="row">
          <div class="col-4">積雪量</div>
          <div class="col-3"><%= ski.cover %>cm</div>
        </div>
        <div class="row">
          <div class="col-4">雪質</div>
          <div class="col-3"><%= ski.quality%></div>
        </div>
        <div class="row">
          <div class="col-4">ジャンル</div>
          <div class="col-3"><%= ski.genre.genre_name %></div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
