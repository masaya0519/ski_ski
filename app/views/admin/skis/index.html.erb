<div class="container">
  <div class="row mt-3">

　　<h4 class="col-md-3 bg-light text-center m-4">スキー場一覧</h4>
　　<div class="col-md-3 m-4"></div>
　　<div class="col-md-3 m-4">
      <%= link_to new_admin_ski_path, class:"btn btn-outline-secondary" do %>
        <i class="fas fa-plus fa-1x"></i>
      <% end %>
    </div>
　</div>
  <div class="row">
    <div class="col-md-10 mx-auto">
      <table class="table">
        <thead class="bg-light text-center">
          <th class="col-2">スキー場名</th>
          <th class="col-2">説明</th>
          <th class="col-1">標高</th>
          <th class="col-2">滑走距離</th>
          <th class="col-1">積雪量</th>
          <th class="col-2">雪質</th>
          <th class="col-2">ジャンル</th>
        </thead>
        <tbody class="text-center">
          <% @skis.each do |ski| %>
            <tr>
              <td><%= link_to ski.ski_name, admin_ski_path(ski.id) %></td>
              <td><%= ski.explanation %></td>
              <td><%= ski.elevation %>m</td>
              <td><%= ski.running_distance %>m</td>
              <td><%= ski.cover %>cm</td>
              <td><%= ski.quality%></td>
              <td><%= ski.genre.genre_name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>
