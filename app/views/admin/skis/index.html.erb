<div class="container">
  <div class="row mt-3">

　　<h4 class="col-md-3 bg-light text-center m-4">スキー場一覧</h4>
　　<div class="col-md-3 m-4"></div>
　　<div class="col-md-3 m-4">
      <%= link_to new_admin_ski_path, class:"btn btn-outline-secondary" do %>
        <i class="fas fa-plus fa-1x"></i>
      <% end %>
    </div>
　</div>
  <div class="row">
    <div class="col-md-10 mx-auto">
      <% @skis.each do |ski| %>
        <div class="col-8">
          <%= link_to ski.ski_name, admin_ski_path(ski.id) %>
          <%= ski.explanation %>
        </div>
        <div class="col-4">
          <%= ski.elevation %>m
          <%= ski.running_distance %>m
          <%= ski.cover %>cm
          <%= ski.quality%>
          <%= ski.genre.genre_name %>
        </div>
      <% end %>
    </div>
  </div>
</div>