<div>
  <p>コメント件数：<%= @ski.reviews.count %></p>
  <% @ski.reviews.each do |review| %>
  <div class="row mb-3">
    <div class="col-2">
      <%= review.member.name %>
    </div>
    <div class="col-4">
      <%= review.review %>
    </div>
    <div class="col-2">
      <%= review.created_at.strftime('%Y/%m/%d') %>
    </div>
    <div class="col-right">
      <% if review.member == current_member %>
        <%= link_to "削除", ski_review_path(@ski.id, review), method: :delete %>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
<div>
  <%= form_with model: [@ski, @review] do |f| %>
    <%= f.text_area :review, rows: '5', cols: '40', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>