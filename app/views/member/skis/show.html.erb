<%= render "member/skis/genre", genres: @genres %>
<div class="container col-xs-6">
  <div class="row">
　  <div class="col-xs-12 mt-3">
 　  　<h3><strong>スキー場詳細</strong></h3>
 　　</div>
  </div>
  <div class="row mx-aout.d-block">
    <% if @ski.image.attached? %>
      <%= image_tag @ski.image, size:'1140x650' %>
    <% else %>
      <%= image_tag 'no_image', size: "300x300" %>
    <% end %>
  </div>
  <div class="row text-center">
    <div class="col-lg">
      <table class="table">
        <tr>
          <th>スキー場名</th>
          <td><%= @ski.ski_name %></td>
        </tr>
        <tr>
          <th>説明</th>
          <td><%= @ski.explanation %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @ski.genre.genre_name %></td>
        </tr>
        <tr>
          <th>標高</th>
          <td><%= @ski.elevation %>m</td>
        </tr>
        <tr>
          <th>滑走距離</th>
          <td><%= @ski.running_distance %>m</td>
        </tr>
        <tr>
          <th>積雪量</th>
          <td><%= @ski.cover %>cm</td>
        </tr>
        <tr>
          <th>雪質</th>
          <td><%= @ski.quality %></td>
        </tr>
      </table>
      <%= render "member/skis/new"%>
      <div class="d-flex justify-content-around">
        <p><%= link_to "詳細へ戻る", genres_path(genre_id: @ski.genre.id), class:"btn btn-primary" %></p>
      </div>
    </div>
  </div>
</div>
